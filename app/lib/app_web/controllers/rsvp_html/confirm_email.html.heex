<.rsvp_header />

<br />

<.confirmation_step header="What's a good email?" step_id={@step_id} hide_next={true}>
  <p>
    Please confirm your contact information:
  </p>
  <.guest_form
    changeset={@changeset}
    action={~p"/guest/#{@guest}?#{[redirect: ~p"/rsvp/confirm/1"]}"}
  >
    <:actions>
      <div class="flex justify-between">
        <.link
          class="rounded-md font-semibold bg-black py-2 px-4 border border-transparent text-center text-sm text-white transition-all shadow-md hover:shadow-lg focus:bg-slate-700 focus:shadow-none active:bg-slate-700 hover:bg-slate-700 active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
          href={~p"/rsvp/confirm/1"}
        >
          Looks good
        </.link>
        <.button class="btn-action">
          Update
        </.button>
      </div>
    </:actions>
  </.guest_form>
</.confirmation_step>

<.footer />
